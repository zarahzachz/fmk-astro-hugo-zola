---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
    <nav aria-label="Primary">
      <a href="/">Return home</a>
    </nav>

    <main>
      <slot />
    </main>
	</body>
</html>
<style is:global>
	:root {
    --accent: yellowgreen;
    color-scheme: dark;
	}

  html {
    font-family: system-ui, sans-serif;
    line-height: 1.5;
  }

  nav, main {
    margin-inline: auto;
    max-width: 70ch;
  }

  h1, h2, h3, h4, h5, h6 { 
    font: inherit;
    margin: 0;
  }

  p, [role="list"], legend {
    margin: 0;
    padding: 0;
  }

  a {
    color: var(--accent);
  }
</style>
